import tkinter as tk
window = tk.Tk()
window.title("BUTTON GUI")
window.geometry("250x250")
window.configure(bg="pink")
def quit():
    window.destroy()
def clicker():
    lb=tk.Label(text="YOU CLICKED THE BUTTON !").pack()
btn=tk.Button(window,text="click me",fg="blue",font="algerian",command=clicker).pack()
quit_btn=tk.Button(window,text="QUIT",fg="red",command=quit).pack()
window.mainloop()
